%contact
  %id
    %id= owner_contact.hbx_id
  = render :partial => "events/v2/shared/person_name", :object => owner_contact
  - if owner_contact.hbx_staff_role.present?
    %job_title=  owner_contact.hbx_staff_role.job_title
    %department= owner_contact.hbx_staff_role.department
  - if owner_contact.addresses.present?
    %addresses
      = render :partial => "events/v2/addresses/address", :collection => owner_contact.addresses
  - work_email = owner_contact.emails.detect { |em| em.kind == "work" }
  - if work_email.present?
    %emails
      %email
        %type= "urn:openhbx:terms:v1:email_type#work"
        %email_address= work_email.address
  %phones
    = render :partial => "events/v2/phones/phone", :collection => owner_contact.phones