<div class="container-fluid">
    <div class='dental_plan_selectors'>

        <div id='dental-carriers' style='width: 148px;'>
            <b>Carriers</b><br/>
            <%- @dental_selectors[:carriers].each do |carrier| %>
                   <div id="<%=carrier[1]%>"  class="dental criteria <%=carrier[0]=='any' && 'active'%>" style='width: 148px;'><%=carrier[0] %> </div>
             <% end %>
        </div>

        <div id='dental-metals'>
            <b>Coverage Level</b> </br>
            <%- @dental_selectors[:dental_levels].each do |dental_level| %>
                <div id="<%=dental_level%>"  class="dental criteria <%=dental_level=='any' && 'active'%>"> <%= dental_level %> </div>
            <% end %>
        </div>

        <div id='dental-plan_types'>
            <b>Plan Types</b> <br>
            <%- @dental_selectors[:plan_types].each do |type| %>
                <div id="<%=type%>" class="dental criteria <%=type=='any' && 'active'%>"> <%= type %> </div>
            <% end %>
        </div>

        <div id='dental-dc_in_network'>
             <b>DC Network</b> <br>
          <%- @dental_selectors[:dc_network].each do |choice| %>
            <div  id="<%=choice%>" class="dental criteria <%=choice=='any' && 'active'%>"> <%= choice %> </div>
          <% end %>
        </div>

        <div id='dental-nationwide'>
            <b>Nationwide</b> <br>
          <%- @dental_selectors[:nationwide].each do |choice| %>
            <div id="<%=choice%>" class="dental criteria <%=choice=='any' && 'active'%>"><%= choice %> </div>
          <% end %>
        </div>
    </div>

    <div style='min-width:40px; float:left'>&nbsp;&nbsp;&nbsp;</div>
    <div style='float:left; width 350px; display: block' >
        <div><b>Limit maximum deductible 0-$6000</b></div>
        <input id="ex2" data-slider-id='dental-ex2Slider' type="text" data-slider-min="0" data-slider-max="6000" data-slider-step="1" data-slider-value="6000" style='width:300px'
          data-slider-ticks="[0, 2000, 4000, 6000]"
          data-slider-ticks-labels='["$0", "$2000", "$4000", "$6000"]'
        />
    </div>
</div>
