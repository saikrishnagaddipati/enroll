<%= wicked_pdf_stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<div class="module broker_quote_tool">
  <div class="pdf-body">
    <div class="row">
      <div class="col-md-12">
        <h3>Quote Name: <%=@quote.quote_name %></h3>

        <h4> Employer Claim Code: &nbsp;<b><%=@quote.claim_code%></b></h4>

        <p>Effective Date is <b><%=@quote.start_on %></b></p>

        <p>Costs are based on the roster associated with this quote of  <b><%= @quote.quote_households.count %></b> families:</p>

        <table class="table table-striped table-hover table-sm panel panel-default">
          <thead class="thead-default">
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Relationship</th>
              <th>DOB</th>
            </tr>
          </thead>
          <% @quote.quote_households.each do |house_hold| %>
            <% house_hold.quote_members.each do |member|  %>
            <tr>
              <td><%=member.first_name%></td>
              <td><%= member.last_name%></td>
              <td><%= member.employee_relationship.humanize%></td>
              <td><%= member.dob%></td>
            </tr>
            <% end %>
          <% end%>
        </table>

        <div class="quote-benefit-group">
          <div class="benefit-package">
            <p>
             <b>Coverage Year:</b> <%= @quote.start_on.strftime("%m/%d/%Y") %> - <%= @quote.start_on.next_year.strftime("%m/%d/%Y") %>
            </p>
            <table class="table table-striped table-hover table-sm panel panel-default">
              <thead class="thead-default">
                <tr>
                  <th>Reference Plan</th>
                  <th>Carrier</th>
                  <th>Type</th>
                  <th>Metal Level</th>
                  <th>Plans By</th>
                </tr>
              </thead>
                <tr>
                  <td><%=@plan.name %></td>
                  <td><%=@plan.carrier_profile.abbrev.upcase %></td>
                  <td><%= @plan.plan_type.upcase %></td>
                  <td><%=@plan.metal_level.capitalize%></td>
                  <td>
                  <% if @elected_plan_choice == "Single Carrier" %>
                  Single Carrier
                  <% elsif @elected_plan_choice == "Metal Level" %>
                  Metal Level
                  <% elsif @elected_plan_choice == "Single Plan" %>
                  Single Plan
                  <% end %>
                  </td>
                </tr>
              </table>
            </div>
            <p>Below is your Employer's Plan offering Spectrum. Your offerings are based on <%= @offering_param %><%= @elected_plan_choice %>.</p>
            <div class="col-xs-12 quote-details">
              <div class="col-xs-12">
                <table class = "employer-health-contribution">
                  <tr>
                    <th>Offered</th>
                    <th>Employer Contribution</th>
                  </tr>
                  <% @quote.quote_relationship_benefits.each do|rb| %>
                    <tr>
                      <td><%=rb.relationship.humanize %></td>
                      <td>
                        <strong><%= number_to_percentage rb.premium_pct, precision: 0 %></strong>
                      </td>
                    </tr>
                  <% end %>
                </table>
              </div>
              <div class="col-xs-12">
                <div class="quote-est-month col-xs-11">
                  <div class="row">
                    <div class="col-xs-4">
                      <div class="row">
                        <span>Employer Estimated Maximum Monthly Cost</span>
                        <h2><%= number_to_currency(@quote.published_employer_cost)%></h2>
                      </div>
                    </div>
                    <div class="col-xs-8">
                      <div class="row">
                        <table>
                          <tr>
                            <th colspan ="2" ></th>
                            <th>Min</th>
                            <th>Max</th>
                          </tr>
                          <tr>
                            <td colspan="2">Total Estimated Monthly Cost for Plan Participants</td>
                            <td><%= number_to_currency(385)%></td>
                            <td><%= number_to_currency(372)%></td>
                          </tr>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <p>**Actual costs may vary.</p>
      </div>
    </div>
  </div>
</div>
