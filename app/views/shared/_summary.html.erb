<% if @hbx_enrollment.shopping?%>
<% else %>
  <%= link_to '<i class="fa fa-chevron-left"></i> Back to My Account'.html_safe, family_account_path, class: 'btn btn-trans all-plans' %>
  <br/>
  <br/>
<% end %>


<% if qhp.present? %>

  <div class="row plan module" style="margin-top: 0;">
      <div class="col-xs-12">
        <div class="row">

          <div class="col-xs-4">
            <span class="pull-left">
            <%= display_carrier_logo(@plan.carrier_profile.try(:legal_name), {width: 180}) %>
          </span>
          </div>
          <div class="col-xs-3 pull-right">

            <% csv = Products::QhpCostShareVariance.find_qhp_cost_share_variances(["#{@plan.hios_id}"], 2016, "health").first %>
            <% moop = csv.qhp_maximum_out_of_pockets.where(name: "Maximum Out of Pocket for Medical and Drug EHB Benefits (Total)").last %>
            <% premium = current_cost(@plan.total_employee_cost*12, @plan.ehb, nil, 'shopping', @plan.can_use_aptc?) %>

            <% if @person.primary_family.active_family_members.count > 1 %>
              <% maximum = moop.in_network_tier_1_individual_amount.gsub(/[$,]/, '').to_f + premium %>
            <% else %>
              <% maximum = moop.in_network_tier_1_family_amount.gsub(/[$,]/, '').to_f + premium %>
            <% end %>

            <div style="position: absolute; right: 15px; top: 0;">
            <div class="pull-right">
              <span style="font-size: 24px; display: inline-block;" class="pull-right">
                <% if (@hbx_enrollment.present? && @hbx_enrollment.coverage_kind == 'health') || @plan.coverage_kind == 'health' %>
                <%= number_to_currency(current_cost(@plan.total_employee_cost, @plan.ehb, @hbx_enrollment, @source, @plan.can_use_aptc?)) %>
                <% else %>
                <%= number_to_currency(@plan.total_employee_cost) %>
                <% end %>
              </span>
              <br/><span class="lg" style="margin-bottom: 8px; display: inline-block;">Your Premium Per Month</span>
              <br/>
            </div>


        </div>
        </div>
        <div class="col-xs-12">
          <h3 class="text-blue"><%= @plan.name %></h3>
        </div>

        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-8 module summary-details">
              <table>
                <tr>
                  <td>
                    <span class="ttu lg twelve">
                      Type
                    </span>
                    <br/>
                    <span class="ttu dg fourteen">
                      <%= @plan.plan_type ? @plan.plan_type.upcase : "" %>
                    </span>
                  </td>
                  <td>
                    <span class="ttu lg twelve">
                      Metal Level
                    </span>
                    <br/>
                    <span class="ttu dg fourteen">
                      <%= display_dental_metal_level @plan %>
                    </span>
                  </td>
                  <td>
                    <span class="ttu lg twelve">
                      Network
                    </span>
                    <br/>
                    <span class="ttu dg fourteen">
                      <%= @plan.nationwide ? "Nationwide" : "DC-Metro" %>
                    </span>
                  </td>
                  <td>
                    <span class="ttu lg twelve">
                      <% if @hbx_enrollment.hbx_enrollment_members.count > 1 %>
                        Family Deductible
                      <% else %>
                        Deductible
                      <% end %>
                    </span>
                    <br/>
                    <span class="ttu dg fourteen">
                      <% if @hbx_enrollment.hbx_enrollment_members.count > 1 %>

                      <%= @plan.family_deductible %>
                      <% else %>

                    <%= @plan.deductible %>
                      <% end %>
                    </span>
                  </td>
                </tr>
              </table>

            </div>
            <div class="col-xs-12 col-sm-4 col-md-4">
              <ul class="list-group">
                <li class="list-group-item list-group-item-success" data-toggle="tooltip" title="Monthly Premium: The amount you must pay for insurance each month, even if you don’t go to the doctor.">Premium Cost:
                  <% if (@hbx_enrollment.present? && @hbx_enrollment.coverage_kind == 'health') || @plan.coverage_kind == 'health' %>
                  <%= number_to_currency(current_cost(@plan.total_employee_cost, @plan.ehb, @hbx_enrollment, @source, @plan.can_use_aptc?)*12) %>
                  <% else %>
                  <%= number_to_currency(@plan.total_employee_cost*12) %>
                  <% end %>
                </li>
                <li class="list-group-item list-group-item-warning" data-toggle="tooltip" title="Estimated out-of-pocket cost: The amount you’re likely to spend on medical services this year based on the health information you gave us. This amount doesn’t include your monthly premium.">Estimated Out Of Pocket:
                  <% if (@hbx_enrollment.present? && @hbx_enrollment.coverage_kind == 'health') || @plan.coverage_kind == 'health' %>
                  <%= number_to_currency(current_cost(@plan.total_employee_cost, @plan.ehb, @hbx_enrollment, @source, @plan.can_use_aptc?)*1.3) %>
                  <% else %>
                  <%= number_to_currency(@plan.total_employee_cost*1.3) %>
                  <% end %>
                </li>
                <li class="list-group-item list-group-item-danger" data-toggle="tooltip" title="Worst Case: The most you could pay in a year. Your annual premium plus you’re the highest possible out of pocket cost for your insurance plan.">Worst Case:
                  <% if (@hbx_enrollment.present? && @hbx_enrollment.coverage_kind == 'health') || @plan.coverage_kind == 'health' %>
                  <%= number_to_currency(maximum) %>
                  <% else %>
                  <%= number_to_currency(maximum) %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="row">
              <br/>
              <br/>
              <div class="col-xs-4">
                <%= render partial: "shared/plan_shoppings/sbc_link", locals: { plan: @plan } %>
              </div>
              <div class="col-xs-4">
                <% if @plan.coverage_kind == "health" && @plan.rx_formulary_url.present? %>
                  <%= link_to "RX FORMULARY URL", @plan.rx_formulary_url, target: "_blank" %>
                <% end %>
              </div>
              <div class="col-xs-4">
                <% if @plan.nationwide %>
                  <%= link_to "PROVIDER DIRECTORY", @plan.provider_directory_url, target: "_blank" %>
                <% end %>
              </div>
            </div>
            <div class="pull-right">
            <% if @hbx_enrollment.shopping?%>
              <%= render partial: "shared/plan_shoppings/select_plan_button", locals: { plan: @plan } %>
            <% end %>
          </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12" style="display: none;">
    <div class="row">
      <% if @market_kind == "employer_sponsored" && @coverage_kind == 'health' %>
        <div class="col-md-4 col-sm-4 col-xs-12">
          <h3><%= number_to_currency(@plan.total_premium) %></h3><small>Premium</small>
        </div>

        <div class="col-md-4 col-sm-4 col-xs-12">
          <h3><%= number_to_currency(@plan.total_employer_contribution) %></h3><small>Employer</small>
        </div>
      <% end %>
    </div><br><br>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">

      </div>
    </div>
  </div>
  <% if @coverage_kind == "health" %>
    <div class="details">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th width="30%">SERVICES YOU MAY NEED</th>
            <th width="40%">YOUR COST AT PARTICIPATING PROVIDER </th>
            <th width="30%">(IN-NETWORK)</th>
          </tr>
          <tr>
            <th>&nbsp;</th>
            <th>CO-PAY</th>
            <th>COINSURANCE</th>
          </tr>
        </thead>

        <tbody>
          <%= render partial: "shared/service_visit_details", locals: { qhp: qhp } %>

          <tr>
            <td></td>
            <td colspan="3" class="text-center">
              <% if @hbx_enrollment.shopping?%>
                <%= render partial: "shared/plan_shoppings/select_plan_button", locals: { plan: @plan } %>
              <% else %>
                <%= link_to '<i class="fa fa-chevron-left"></i> Back to My Account'.html_safe, family_account_path, class: 'btn btn-transparent all-plans' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
  <% if @hbx_enrollment.shopping? %>
    <%= link_to '<i class="fa fa-chevron-left"></i> Back to Results'.html_safe, '#', class: 'btn btn-trans all-plans' %>
    <br/>
    <br/>
  <% end %>
<% else %>
  No Plan found
<% end %>
