<h3>Employer Information</h3>

<div class="row">
  <div id="personal_info" class="focus_effect personal-info-row col-md-12">
    <div class="col-md-12 col-sm-12 col-xs-12 no-pd first">
      <%= render "shared/employer_profile_fields", f: f %>
    </div>
  </div>
</div>
<div id="employer_details_wrapper"></div>

<div class="row top-buffer">
  <div class="col-md-9 col-sm-9 col-xs-12">
      <%= f.submit "Search Employers", class: "btn btn-success btn-search" %>
      &nbsp; <span><i class="fa fa-lock icon-large"></i> Your information is secure.</span>
  </div>
</div>

<div id ="new_employer_button" style="display:none">
  <p> Please click the following button to create an employer profile.
    <%= f.submit "CREATE EMPLOYER", name: "create_employer", class: "btn btn-primary btn-search" %>
  </p>
</div>

<script>
	$(document).on('ready page:load', function () {
		Freebies.allFreebies();
	});
</script>
