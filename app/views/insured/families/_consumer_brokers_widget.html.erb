<% if @person && @person.primary_family && @person.primary_family.current_broker_agency.present? %>
<div class="panel panel-default module consumer-broker-widget">
  <div class="panel-heading">
    <h3 class="panel-title">
      <strong>
        Your Broker or Assister
      </strong>
    </h3>
  </div>
  <div class="panel-body">
    <div class="text-center">
      <i class="fa fa-user fa-3x" aria-hidden="true"></i>
      <br/>
      <%=  @person.primary_family.current_broker_agency.broker_agency_profile.legal_name.capitalize %>
    </div>
    <div class="text-left">
        <div class="broker-information">
          <%= @person.primary_family.current_broker_agency.writing_agent.person.first_name.capitalize %>
          <%= @person.primary_family.current_broker_agency.writing_agent.person.last_name.capitalize %>
          <br/>
          <a href="tel:1-<%= @person.primary_family.current_broker_agency.writing_agent.phone %>">1 <%= @person.primary_family.current_broker_agency.writing_agent.phone %></a>
          <br/>
          <%= mail_to @person.primary_family.current_broker_agency.writing_agent.email.address, @person.primary_family.current_broker_agency.writing_agent.email.address %><br>
        </div>
    </div>
  </div>
</div>
<% end %>
