<div class="hbx-enrollment-panel waived-coverage module">
  <div class="panel panel-default min-h">
    <div class="panel-heading">
      <h4 class="bg-title">
        <%= hbx_enrollment.coverage_kind %>
        Coverage
        <span class="separator"><%= hbx_enrollment.kind == 'employer_sponsored'? hbx_enrollment.employer_profile.legal_name : 'Individual & Family' %></span>
      </h4>
      <hr>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-9">
              <h4>You have selected to waive your employer
                <%= hbx_enrollment.coverage_kind %>
                coverage for
                <%= hbx_enrollment.effective_on.year %></h4>
            </div>
            <div class="col-xs-3">
              <div class="family-plan-selection">
                <div class="status">
                  <h4><%= hbx_enrollment.aasm_state.titleize %>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <table>
        <tr>
          <td>
            <div class="enrollment-submitted-at info">
              <label>
                Waived Date:
              </label>
              <strong>
                <%= format_policy_waived_date(hbx_enrollment) %> (<%= format_policy_waived_time(hbx_enrollment) %>)
              </strong>
            </div>
          </td>
        </tr>
      </table>
      <div class="row">
        <div class="col-xs-5 pull-right">
          <%= link_to "Make Changes", new_insured_group_selection_path(person_id: @person.id, employee_role_id: @employee_role.try(:id), change_plan: 'change_plan', hbx_enrollment_id: hbx_enrollment.id), class: "btn btn-default pull-right" %>
        </div>
      </div>
    </div>
  </div>
</div>
