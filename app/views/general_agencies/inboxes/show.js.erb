$("#message_list_form").hide();
$("#inbox_form").show();
$('#show_message_form').show().html("<%= escape_javascript(render "shared/inboxes/message", message: @message) %>");
$(".btn-danger").click(function(){
  $('#show_message_form').hide();
  $("#inbox_form, #message_list_form").show();
  $('#inbox-messages').show().html("<%= escape_javascript(render "shared/inboxes/message_list", provider: @inbox_provider) %>");
});
